<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jvyou.mybatis.mapper.UserMapper">
    <insert id="insert">
        insert into t_user(name, age)
        values (#{user.name}, #{user.age});
    </insert>
    <insert id="insertByUser">
        insert into t_user(name, age)
        values (#{name}, #{age});
    </insert>
    <update id="update">
        update t_user
        set name = #{user.name},
            age  = #{user.age}
        where id = #{user.id};
    </update>
    <update id="updateByUser">
        update t_user
        set name = #{name},
            age  = #{age}
        where id = #{id};
    </update>
    <delete id="delete">
        delete
        from t_user
        where id = #{id};
    </delete>
    <select id="getAll" resultType="com.jvyou.mybatis.entity.User">
        select *
        from t_user
        where id = #{id}
          and name = #{name};
    </select>
    <select id="getOne" resultType="com.jvyou.mybatis.entity.User">
        select *
        from t_user
        where id = #{id}
          and name = #{name};
    </select>
    <select id="count" resultType="java.lang.Integer">
        select count(*)
        from t_user;
    </select>
    <select id="findOne" resultType="com.jvyou.mybatis.entity.User">
        select * from t_user
        <where>
            <if test="id != null">
                and id = #{id}
                <if test="1=1">
                    and 1+1
                </if>
            </if>
            <if test="name != null">
                and name = #{name}
            </if>
        </where>
    </select>
</mapper>